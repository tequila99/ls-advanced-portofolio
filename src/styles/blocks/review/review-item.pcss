.review-item {
  display: flex;
  flex-direction: column;
  min-width: 425px;
  width: 50%;
  margin-right: 85px;
  margin-left: 96px;
  position: relative;
  &:last-child {
    margin-right: none;
  }
  &:before {
    content: '';
    background-image: svg-load('quote.svg', width=100%,height=100%);
    background-repeat: no-repeat;
    background-size: contain;
    width: 75px;
    height: 63px;
    fill: $text-color;
    opacity: .05;
    position: absolute;
    top: 0;
    left: -96px;
  }
  &__content {
    max-width: 320px;
    height: 100%;
    opacity: .5;
    font-size: 16px;
  }
  &__footer {
    display: flex;
    margin-top: 32px;
  }
  &__avatar {
    margin-right: 32px;
  }
  &__user-name {
    font-weight: 700;

  }
  &__user-position {
    opacity: .3;
    font-size: 16px;
    font-weight: 600;
    margin-top: 19px;
  }
}