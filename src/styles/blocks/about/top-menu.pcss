.top-menu {
  display: flex;
  /* min-width: 698px; */
  width: 100%;
  max-width: 698px;
  &__list {
    display: flex;
    width: 100%;
    /* justify-content: space-between; */
  }
  &__item {
    /* margin-right: 60px; */
    width: calc(100%/6);
    &:last-child {
      margin-right: 0;
    } 
  }
  &__link {
    width: 100%;
    font-size: 16px;
    color: $text-color;
    text-decoration: none;
    &:hover {
      font-weight: 600;
    }
  }
}