.avatar {
  max-width: 200px;
  max-height: 200px;
  overflow: hidden;
  border-radius: 50%;
  display: flex;
  &__img {
    display: block;
    margin: auto;
    width: 100%;
    height: 100%;
  }

}

.avatar-mini {
  max-width: 75px;
  max-height: 75px;
  overflow: hidden;
  border-radius: 50%;
  display: flex;
  &__img {
    display: block;
    margin: auto;
    width: 100%;
    height: 100%;
  }
}
