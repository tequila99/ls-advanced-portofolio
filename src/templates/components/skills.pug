script(type='x/template')#skills-component
  .ring-block
    Row(:className='className' v-for='(row,index) in skills' :key='index' :title='row.title' :items='row.items')

script(type='x/template')#skills-ring    
  div.ring.ring__border(:class='classRing')
    svg(viewBox="0 0 200 200" preserveAspectRatio="none").skill__shape
      circle(r="80" cx="100" cy="100").skill__circle.skill__circle--position-under
      circle(r="80" cx="100" cy="100", :stroke-dashoffset='dashOffset', :stroke-dasharray='dashArray').skill__circle.skill__circle--position-above
      linear-gradient()
    span.ring__label {{ label }}

script(type='x/template')#skills-row
  div(:class='className')
    h3(:class='classTitle') {{ title }}
    ul(:class='classList')
      li(v-for='(item,index) in items' :key='index')
        Ring(:className='className',:label='item.label', :value='item.value')